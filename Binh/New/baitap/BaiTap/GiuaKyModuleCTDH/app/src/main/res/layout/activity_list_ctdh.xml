<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:background="@android:color/darker_gray"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView9CT"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Số Đơn Đặt Hàng:"
                    android:textColor="@android:color/background_dark" />

                <TextView
                    android:id="@+id/textView10CT"
                    android:layout_width="108dp"
                    android:layout_height="wrap_content"
                    android:text="Mã Mặt Hàng:"
                    android:textColor="@android:color/background_dark" />

                <TextView
                    android:id="@+id/textView8CT"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Số Lượng Đặt:"
                    android:textColor="@android:color/background_dark" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textViewSoDDHCT"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textColor="@android:color/background_dark" />

                <TextView
                    android:id="@+id/textViewMaHGCT"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TV1"
                    android:textColor="@android:color/background_dark" />

                <TextView
                    android:id="@+id/textViewSLDATCT"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10"
                    android:textColor="@android:color/background_dark" />

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>